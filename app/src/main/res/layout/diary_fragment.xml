<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/activity_vertical_margin"
    >
        
        <ImageView
            android:id="@+id/diary_icon"
            android:layout_width="@dimen/button_icon_diameter"
            android:layout_height="@dimen/button_icon_diameter"
            android:src="@drawable/diary_icon"/>

        <TextView
            android:id="@+id/card_title_diary_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="EdTech"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/button_icon_diameter"
        android:layout_height="@dimen/button_icon_diameter"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/button_icon_diameter"/>




</LinearLayout>